                <TableColumn fx:id="destinationNameTableColumn" prefWidth="139.0" text="Destination Name" />
                <TableColumn fx:id="destinationCountTableColumn" prefWidth="150.0" text="Booking Count" />
            </columns>
        </TableView>
      <Label layoutX="54.0" layoutY="92.0" prefHeight="26.0" prefWidth="421.0" stylesheets="@Style.css" text="Total Bookings per Destination (with ROLLUP)" textFill="#3498db">
         <font>
            <Font name="Calibri Bold" size="22.0" />
         </font>
      </Label>

        <RadioButton fx:id="star5" layoutX="554.0" layoutY="139.0" stylesheets="@Style.css" text="5 Star" textFill="#0395dd">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font></RadioButton>
        <RadioButton fx:id="star4" layoutX="554.0" layoutY="169.0" stylesheets="@Style.css" text="4 Star" textFill="#0395dd">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font></RadioButton>
        <RadioButton fx:id="star3" layoutX="554.0" layoutY="199.0" stylesheets="@Style.css" text="3 Star" textFill="#0395dd">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font></RadioButton>
        <RadioButton fx:id="star2" layoutX="554.0" layoutY="229.0" stylesheets="@Style.css" text="2 Star" textFill="#0395dd">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font></RadioButton>
        <RadioButton fx:id="star1" layoutX="554.0" layoutY="259.0" stylesheets="@Style.css" text="1 Star" textFill="#0395dd">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font></RadioButton>

        <Button layoutX="542.0" layoutY="299.0" onAction="#submitRating" prefHeight="37.0" prefWidth="100.0" stylesheets="@Style.css" text="Submit" textFill="#1c88da">
         <font>
            <Font name="Calibri Bold" size="17.0" />
         </font></Button>
      <Label layoutX="514.0" layoutY="92.0" prefHeight="26.0" prefWidth="156.0" stylesheets="@Style.css" text="Rate our System" textFill="#3498db">
         <font>
            <Font name="Calibri Bold" size="22.0" />
         </font>
      </Label>
      <Label fx:id="rating_success_label" layoutX="437.0" layoutY="357.0" prefHeight="37.0" prefWidth="291.0" stylesheets="@Style.css" textAlignment="CENTER" textFill="#3498db">
         <font>
            <Font name="Calibri Bold" size="22.0" />
         </font>
      </Label>
      <Label layoutX="185.0" layoutY="430.0" prefHeight="26.0" prefWidth="276.0" stylesheets="@Style.css" text="Overall Rating of our System- " textFill="#3498db">
         <font>
            <Font name="Calibri Bold" size="22.0" />
         </font>
      </Label>
      <Label fx:id="average_rating_label" layoutX="464.0" layoutY="420.0" prefHeight="46.0" prefWidth="100.0" stylesheets="@Style.css" textAlignment="CENTER" textFill="#3498db">
         <font>
            <Font name="Calibri Bold" size="34.0" />
         </font>
      </Label>


    </children>
</AnchorPane>
