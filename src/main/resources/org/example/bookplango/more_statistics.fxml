<AnchorPane prefHeight="559.0" prefWidth="760.0" style="-fx-background-color: #EBF5FB;" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bookplango.More_Statistics">
    <children>
        <Label layoutX="300.0" layoutY="20.0" stylesheets="@Style.css" text="Statistics" textFill="#3498db">
