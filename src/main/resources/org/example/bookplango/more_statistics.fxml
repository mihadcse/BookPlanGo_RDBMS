                <Font name="Calibri Bold" size="12.0" />
            </font>
        </Button>

        <!-- TableView added below -->
        <TableView fx:id="destinationstatTableView" layoutX="83.0" layoutY="126.0" prefHeight="222.0" prefWidth="291.0" stylesheets="@Style.css">
